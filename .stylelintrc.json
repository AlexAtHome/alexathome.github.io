{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-tailwindcss"
	],
	"overrides": [
		{
			"files": [
				"src/**/*.css"
			],
			"rules": {
				"at-rule-no-unknown": [
					true,
					{
						"ignoreAtRules": [
							"tailwind",
							"apply",
							"layer",
							"config",
							"variants",
							"responsive",
							"screen"
						]
					}
				]
			}
		}
	]
}
