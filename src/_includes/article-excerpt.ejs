<article class="flex flex-col col-span-1 gap-4 items-start">
	<header>
		<h2 class="text-2xl font-bold">
			<a href="<%= href %>" class="inline-flex relative items-center hover:underline underline-offset-8">
				<%= title %>
			</a>
		</h2>
		<div class="text-sm text-stone-400">Created at: <time><%= createdAt %></time></div>
	</header>
	<div class="line-clamp-2"><%= excerpt %></div>
	<a href="<%= href %>" class="link">
		Read the whole article
		<svg class="inline-block bi" width="32" height="32" fill="currentColor">
			<use xlink:href="/assets/icons/bootstrap.svg#arrow-right" />
		</svg>
	</a>
</article>
