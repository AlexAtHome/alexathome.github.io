<li class="flex flex-row flex-wrap col-span-1 gap-4 gap-y-2 items-start w-full">
	<a :href="href" class="text-2xl w-full inline-flex relative items-center hover:underline underline-offset-8"
		@text="title"></a>
	<span class="text-sm text-slate-600 dark:text-slate-300">
		Posted at <timestamp :@value="createdAt"></timestamp>
	</span>
	<span class="text-sm text-pink-800 dark:text-pink-300" @text="tag"></span>
</li>
